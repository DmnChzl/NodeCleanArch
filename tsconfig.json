{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2024",
    
    /* Modules */
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./src/*"]
    },

    /* Interop Constraints */
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true  
  },
  "exclude": ["dist", "node_modules"]
}
